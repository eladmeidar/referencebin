<% content_for(:breadcrumbs) do %>
  <li><%= link_to 'Bookmarks', bookmarks_path %></li>
  <li><%= link_to @bookmark.language.name, bookmarks_path + "/#{@bookmark.language.permalink}" %></li>
  <li>Bookmarks</li>
<% end %>
<% content_for(:actions) do %>
  <%= link_to 'Edit', edit_bookmark_path(@bookmark) %> | 
  <%= link_to 'Back', :back %>
<% end %>

<h1 class="bookmark_viewing">Viewing Bookmark</h1>

<div style="width:548px; float:left; margin-right:20px">
<p class="tag green">Title</p>
<p><%=h @bookmark.title %></p>

<p class="tag green">Url</p>
<p>
  <% if @url_status == true %>
    <%= link_to @bookmark.url, @bookmark.url, :style => "background:url(/images/icons/check.png) right no-repeat; padding:5px 30px 5px 0;" %>
  <% else %>
    <%= link_to @bookmark.url, @bookmark.url, :style => "background:url(/images/icons/minus.png) right no-repeat; padding:5px 30px 5px 0;" %>
  <% end %>
</p>

<p class="tag green">Topics</p>
<% if ! @bookmark.topic_list.empty? %>
  <p class="sosumi"><%= @bookmark.topic_list %></p>
<% else %>
  <p class="sosumi">Bookmark has no tags</p>
<% end %>

<% if @bookmark.description %>
  <p class="tag green">Description</p>
  <%= markdown(@bookmark.description) %>
<% end %>
</div>

<p><% link_to @bookmark.url do %><%= image_tag @bookmark.thumb(:large), :style => 'border:1px #EFEFEF solid' %><% end %></p>
<div class="clearer"></div>
<div id="question_form" style="display:none">
  <% remote_form_for @bookmark, :url => { :controller => 'bookmarks', :action => 'post_question' } do |f| %>
    <h2 class="section">Add a Question</h2>
    <p class="sosumi">Please enter the question this bookmark helped you to answer. This helps others find the same solution.</p>
    <p class="sosumi green">Question</p>
    <%= text_field_tag :question %>
    <%= image_submit_tag '/images/buttons/create.png' %>
  <% end %>
</div>

<% if ! @bookmark.questions.blank? %>
  <h2 class="section" style="margin-top:50px;">Questions Answered</h2>
  <p class="sosumi">If you see your question below, click the thumbs up next to it!</p>
  <%= render :partial => "questions" %>
  <% if current_user %>
    <h3 class="gray" style="margin-top:30px">
      Did this bookmark help you answer your question but don't see it above? 
      <%= link_to 'Add Question', '#question_form', :rel => 'facebox', :class => 'add', :style => 'margin:150px 20px 0 0' %>
    </h3>
  <% end %>
<% end %>

<% if ! @bookmark.comments.blank? %>
  <h2 class="section" style="margin-top:50px;">
    Comments
    <% if current_user %>
      <span style="float:right"><a href="#comment_form" rel="facebox" class="comment">Post Comment</a></span>
    <% end %>
  </h2>
  <%= render :partial => "comments" %>
<% end %>