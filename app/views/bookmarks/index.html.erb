<% content_for(:breadcrumbs) do %>
  <% if params[:lang] %>
  <li><%= link_to 'Bookmarks', bookmarks_path %></li>
  <li><%= @bookmarks.first.language.name if ! @bookmarks.first.nil? %></li>
  <% else %>
  <li>Recent Bookmarks</li>
  <% end %>
<% end %>
<% content_for(:actions) do %>
  <% if current_user %>
  <%= link_to 'Create Bookmark', new_bookmark_path %>
  <% end %>
<% end %>
<% if params[:lang] %>
<h1 class="<%= params[:lang] %>">Listing bookmarks</h1>
<% else %>
<h1 class="bookmark_recent">Listing Recent Bookmarks</h1>
<% end %>

<% if ! @bookmarks.empty? %>
<p id="position"><%= will_paginate @bookmarks, :id => 'pagination' %></p>

<div id="list">
  <%= render :partial => 'list' %>
</div>

<p id="position"><%= will_paginate @bookmarks, :id => 'pagination' %></p>

<% else %>

<p class="sosumi">No bookmarks</p>

<% end %>