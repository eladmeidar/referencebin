<% content_for(:breadcrumbs) do %>
  <% if ! @bookmarks.empty? %>
  <li><%= link_to 'Bookmarks', bookmarks_path %></li>
  <li><%= @bookmarks.first.language.name %></li>
  <% else %>
  <li>Bookmarks</li>
  <% end %>
<% end %>
<% content_for(:actions) do %><%= link_to 'New bookmark', new_bookmark_path %><% end %>
<% content_for(:toolbar) do %>
  <% if session[:bookmark_content_length] == 0 %>
    <%= link_to_remote("+", :url => { :action => "inc_content_length" }, :collection => @bookmarks) %>
  <% elsif session[:bookmark_content_length] == 1 %>
    <%= link_to_remote("-", :url => { :action => "dec_content_length" }, :collection => @bookmarks) %>
    <%= link_to_remote("+", :url => { :action => "inc_content_length" }, :collection => @bookmarks) %>
  <% else %>
    <%= link_to_remote("-", :url => { :action => "dec_content_length" }, :collection => @bookmarks) %>
    <span>+</span>
  <% end %>
<% end %>

<% if ! @bookmarks.nil? %>

<h2>Listing bookmarks</h2>

<% if ! @bookmarks.empty? %>
<div id="list" style="max-width:800px;">
  <%= render :partial => 'list' %>
</div>

<p id="position"><%= will_paginate @bookmarks, :id => 'pagination' %></p>
<% else %>
<p class="sosumi">No bookmarks yet for <%= params[:lang] %></p>
<% end %>


<% else %>

<style type="text/css">
  .css1 { font-size: 1.0em; }
  .css2 { font-size: 1.2em; }
  .css3 { font-size: 1.4em; }
  .css4 { font-size: 1.6em; }
</style>
<% tag_cloud @tags, %w(css1 css2 css3 css4) do |tag, css_class| %>
  <%= link_to tag.name, { :action => :tags, :tag => tag.name }, :class => css_class %>
<% end %>

<% end %>