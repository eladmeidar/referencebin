<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
	"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<title>Programmer Reference Bin</title>
	<%= stylesheet_link_tag 'base' %>
	<%= stylesheet_link_tag 'new' %>
	<%= stylesheet_link_tag 'new_nav' %>
	<%= stylesheet_link_tag 'coderay' %>
	<!--[if IE]>
    <%= stylesheet_link_tag "ie.css" %>
  <![endif]-->
  <%= stylesheet_link_tag "facebox.css" %>
	
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "facebox.js" %>
	
	<% if @bookmarks %>
	<%= auto_discovery_link_tag(:rss, :controller => 'feeds', :action => @bookmarks.first.language.permalink) if ! @bookmarks.first.nil? %>
	<% end %>
</head>
<body>
  <div id="wrap">
    <div id="header">
      <div id="logo"></div>
      <div id="sessioninfo">
        <%= render :partial => 'layouts/sessioninfo' %>
      </div>
      <div class="clearer"></div>
      <div id="gnav">
        <ul class="<%= params[:controller] %>">
         <%= render :partial => 'layouts/nav' %>
        </ul>
      </div>
    </div>
    <div id="toolbar">
      <ul id="breadcrumbs">
        <li id="home"><%= link_to '&nbsp;', root_url, :class => 'home' %></li>
        <%= yield :breadcrumbs %>
      </ul>
      <ul id="actions">
        <%= yield :actions %>
      </ul>
    </div>
    <div class="clearer"></div>
  	<div id="content" class="clearfix">
  	  <div id="main">
        <% if flash[:warning] or flash[:notice] %>
  		      <div id="notice">
          		<%= flash[:warning] || flash[:notice] %>
              </div>
              <script type="text/javascript">
              $('#notice').delay(1200, function(){
                $("#notice").fadeTo("slow", 0.01, function(){ //fade
                     $(this).remove(); //then remove from the DOM
                 });
              });
              </script>
        <% end %>
        
        <%= yield %>
      </div>
  	</div>
  </div>
  <div id="footer">
    <%= render :partial => 'layouts/footer' %>
  </div>
</body>
</html>
