<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"> 
<html> 
<head> 
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"> 
	<title>Rean Studios org</title>

	<%= stylesheet_link_tag "base.css" %>
	<%= stylesheet_link_tag "nav.css" %>
	<%= stylesheet_link_tag "standard.css" %>
	<%= stylesheet_link_tag 'coderay' %>
	<%= stylesheet_link_tag "facebox.css" %>
	
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "facebox.js" %>
</head> 
<body>
  <br />
  <!--
  <div id="globalheader" class="home"> 
  		<ul class="<%= params[:controller] %>" id="globalnav">
  			<li id="gnav-dashboard"><a href="/">Dashboard</a></li>
  			<li id="gnav-time"><a href="/time/">Articles</a></li>
  			<li id="gnav-jobs"><a href="/jobs/">Bookmarks</a></li>
  		</ul>
    </div>
    
   	<div id="globalsearch">
  	</div>  
  </div>
  -->
  <div class="clearer"></div>
	<div id="container"> 
	  <% if current_user %>
      <div id="userinfo" style="text-align:right; margin-bottom:10px;">
        Logged in : <span style="font-weight:bold"><%= current_user.nickname.titleize %></span> | 
        <%= link_to 'Logout', logout_path %>
      </div>
    <% end %>
		<div id="main"> 
			<div id="content"> 
				<div class="swap-container">
					<div id="swap" class="loading"> 
					</div> 
					<div id="subnav"> 
						<div class="type" id="tour"> 
							<h2 style="color:#c100c8">Languages</h2> 
							<div class="column"> 
								<div class="category"> 
									<ul>
									  <%= render :partial => 'languages/side_nav' %>
									</ul> 
								</div> 
							</div><!--/column--> 
						</div><!--/tour-->	
						<div class="type" id="tips">
						  <h2 style="color:#0055c8"><%= yield :section %> <div id="actionbar" style="font-size:10px;"><ul><%= yield :actionbar %></ul></div></h2>
						  <div id="toolbar"><%= yield :toolbar %></div>
						  <div class="clearer"></div>
							<div id="material" style="margin:10px 20px; min-height:450px;"><%= yield %></div>
					</div> 
					<div class="clear cap bottom"></div> 
				</div><!--/swap-container--> 
 
		</div><!--/main--> 
	</div><!--/container--> 
</body> 
</html>