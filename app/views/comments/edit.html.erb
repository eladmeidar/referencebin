<h1>Editing comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => "100", :rows => "5" %>
  </p>
  
  <p class="tag green">Language</p>
  <p><%= collection_select :comment, :language_id, Language.find(:all, :order => 'name'), :id, :name, {:prompt => true} %></p>
    
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>