<% content_for(:breadcrumbs) do %>
  <li><%= link_to 'Bookmarks', bookmarks_path %></li>
  <li><%= link_to 'Imported Bookmarks', bookmark_imports_path %></li>
  <li>Bookmarks</li>
<% end %>
<% content_for(:actions) do %>
  <li><%= link_to "Edit", edit_bookmark_import_path(@bookmark_import) %> |</li>
  <li><%= link_to "Destroy", @bookmark_import, :confirm => 'Are you sure?', :method => :delete %> |</li>
  <li><%= link_to "View All", bookmark_imports_path %></li>
<% end %>
<h2>Viewing Imported Bookmark</h2>

<p class="tag green">Title</p>
<p><%=h @bookmark_import.title %></p>
<div id="errorExplanation">
  <h2>Problems detected</h2>
  <p>The following problems are preventing this bookmark from being made live</p>
  <ul>
    <% for error in @errors %>
      <li><%= error %></li>
    <% end %>
  </ul>
</div>
<p class="tag green">Url</p>
<p>
  <%= link_to @bookmark_import.url, @bookmark_import.url %>
  
  <% if @curl == "200" %>
    <span class="green" style="margin-left:30px; font-weight:bold">WORKING</span>
  <% else %>
    <span class="red" style="margin-left:30px; font-weight:bold">PROBLEM</span>
  <% end %>
</p>

<p class="tag green">Language</p>
<%=h @bookmark_import.language_id %>

<p class="tag green">Tags</p>
<p class="sosumi"><%= @bookmark_import.tag_list %></p>

<% if @bookmark_import.description %>
<p class="tag green">Description</p>
<p><%= markdown(@bookmark_import.description) %></p>
<% end %>

