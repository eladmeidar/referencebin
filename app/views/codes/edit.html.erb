<h2>Editing code</h2>

<% form_for(@code) do |f| %>
  <%= f.error_messages %>
  
  <%= collection_select :code, :language_id, Language.find(:all, :order => 'name'), :id, :name, {:prompt => true} %>
  
  <p class="tag green">Code</p>
  <p><%= f.text_area :body %></p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @code %> |
<%= link_to 'Back', codes_path %>