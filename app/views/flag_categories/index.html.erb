<% content_for :actions do %>
  <li><%= link_to 'New Flag Type', new_flag_category_path, :class => 'addleft' %></li>
<% end %>
<h1>Flag Categories</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Priority</th>
  </tr>

<% @flag_categories.each do |flag_category| %>
  <tr>
    <td><%=h flag_category.description %></td>
    <td><%=h flag_category.priority %></td>
    <td><%= link_to 'Show', flag_category %></td>
    <td><%= link_to 'Edit', edit_flag_category_path(flag_category) %></td>
    <td><%= link_to 'Destroy', flag_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

