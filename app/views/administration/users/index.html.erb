<% content_for(:breadcrumbs) do %>
  <li><%= link_to 'Administration', administration_path %></li>
  <li>Users</li>
<% end %>


<div style="background:url(/images/admin/features_bggradient20080609.gif) repeat-x; height:150px;">
  <h2 class="users" style="background:url(/images/admin/headers/users.png) no-repeat; height:60px; text-indent:-999px; padding-bottom:40px">Users</h2>
</div>

<table class="interactive">
  <thead>
  	<tr>
  	  <th style="min-width:80px"></th>
  	  <th style="min-width:100px;">Name</th>
  	  <th style="min-width:100px;">Username</th>
  	  <th style="min-width:250px;">Email</th>
  	</tr>
	</thead>
	<tbody>
  <% for user in @users %>
	<tr class="<%= cycle("odd", "even") %>" onclick="window.location='<%= user_path(user)%>'">
	  <td><%= image_tag current_user.gravatar_url(:size => 40) %></td>
		<td><%= user.firstname %> <%= user.lastname %></td>
		<td><%= user.nickname %></td>
		<td><%= user.email %></td>
	</tr>
  <% end %>
  </tbody>
</table>