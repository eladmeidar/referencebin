<% content_for :breadcrumbs do %>
  <li>Sign Up</li>
<% end %>
<% content_for :actions do %>
  <li><%= link_to 'Back', root_url %></li>
<% end %>

<h1>Sign Up</h1>

<p class="sosumi">* All fields are required</p>
<fieldset class="common-form standard-form">
  <% form_for @user do |f| %>
    <%= f.error_messages %>
    <table border="0" cellspacing="5" cellpadding="5">
      <tr><th><%= f.label 'username' %></th><td><%= f.text_field :login %></td></tr>
      <tr><th><%= f.label :nickname %></th><td><%= f.text_field :nickname %></td></tr>
      <tr><th><%= f.label :email %></th><td><%= f.text_field :email %></td></tr>
      <tr><th><%= f.label :firstname %></th><td><%= f.text_field :firstname %></td></tr>
      <tr><th><%= f.label :lastname %></th><td><%= f.text_field :lastname %></td></tr>
      <tr><th><%= f.label :password %></th><td><%= f.password_field :password %></td></tr>
      <tr><th><%= f.label :password_confirmation %></th><td><%= f.password_field :password_confirmation %></td></tr>
    </table>
    <p><%= f.submit "Submit" %></p>
  <% end %>
</fieldset>
