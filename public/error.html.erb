<% case @error
     when "FasterCSV::MalformedCSVError"
       @notice = "Import Rejected"
       @message = "The uploaded file does not appear to be formatted correctly."
     when "Stuff"
    %>... <% 
     when "things"
    %>... <% 
end %>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
	"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<title>Programmer Reference Bin - <%= @notice %></title>
	<%= stylesheet_link_tag 'base' %>
	<%= stylesheet_link_tag 'new' %>
	<%= stylesheet_link_tag 'new_nav' %>
	<%= stylesheet_link_tag 'coderay' %>
	<!--[if IE]>
    <%= stylesheet_link_tag "ie.css" %>
  <![endif]-->
  <%= stylesheet_link_tag "facebox.css" %>
	
	<style type="text/css">
		div.dialog {
			width: 500px;
			padding: 0 4em;
			margin: 4em auto 0 auto;
			border: 1px solid #ccc;
			border-right-color: #999;
			border-bottom-color: #999;
		}
		h1 { color: #f00; }
	</style>
	
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "facebox.js" %>
	
	<% if @bookmarks %>
	<%= auto_discovery_link_tag(:rss, :controller => 'feeds', :action => @bookmarks.first.language.permalink) %>
	<% end %>
</head>
<body>
  <div id="wrap">
    <div id="header">
      <div id="logo"></div>
      <div id="sessioninfo">
        <%= render :partial => 'layouts/sessioninfo' %>
      </div>
      <div class="clearer"></div>
      <div id="gnav">
        <ul class="<%= params[:controller] %>">
         <%= render :partial => 'layouts/nav' %>
        </ul>
      </div>
    </div>
    <div id="toolbar">
      <ul id="breadcrumbs">
        <li id="home"><%= link_to '&nbsp;', root_url, :class => 'home' %></li>
        <%= yield :breadcrumbs %>
      </ul>
      <ul id="actions">
        <%= yield :actions %>
      </ul>
    </div>
    <div class="clearer"></div>
  	<div id="main" class="clearfix">    
  	  <div id="col-nav" style="color:#FFFFFF; background:#333333; width:180px; position:absolute; right:0px; top:20px; height:0px; text-align:left; padding:0 20px 0 20px; clear:both; font-size:10px;">
        <ul id="categories">
          <%= render :partial => 'languages/side_nav' %>
        </ul>
        <% if yield :commands %>
        <ul class="block">
          <%= yield :commands %>
        </ul>
        <% end %>
      </div>
      <div id="col-content" style="max-width:70%">
        <div class="dialog">
          <h1><%= @notice %></h1>
          <p><%= @message %></p>
          <p><%= @error %></p>
        </div>
      </div>
  	</div>
  </div>
  <div id="footer">
    <%= render :partial => 'layouts/footer' %>
  </div>
</body>
</html>